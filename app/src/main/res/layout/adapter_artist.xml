<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_fragment_bg">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                >

                <RelativeLayout
                    android:id="@+id/latest_song_img_backlay"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    android:layout_below="@color/home_fragment_bg" >

                    <ImageView
                       android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/playlist_music_white"/>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/latest_song_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:id="@+id/latest_song_name"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Krishna Ni Begane Baro"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/latest_song_img"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/latest_song_details"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 Song, October 20,2016"
                    android:textColor="@color/latest_release_song_details"
                    android:textSize="15sp"
                    android:layout_below="@+id/latest_song_name"
                    android:layout_toRightOf="@+id/latest_song_img"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"/>


            </RelativeLayout>


            <LinearLayout
                android:gravity="right"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/latest_song_edit"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/edit"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:minHeight="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#333333"/>


</LinearLayout>