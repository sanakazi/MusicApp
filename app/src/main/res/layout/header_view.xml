<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_bg"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

       <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="10dp">


           <ImageView
               android:layout_gravity="center"
               android:gravity="center"
               android:id="@+id/img_home"
               android:layout_width="@dimen/dimen_20"
               android:layout_height="@dimen/dimen_20"
               android:src="@mipmap/home_wight"
            />

           <TextView
            android:id="@+id/txt__home"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:gravity="center"
            />
     </LinearLayout>

       <LinearLayout
           android:orientation="horizontal"
         android:id="@+id/bar_home"
         android:layout_width="match_parent"
         android:layout_height="3dp"
         android:background="@color/home_icons_yellow"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonBrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        <ImageView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/img_browse"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:src="@mipmap/browse_wight"
            />

        <TextView
            android:id="@+id/txt__browse"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/browse"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:gravity="center"
            />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bar_browse"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/home_icons_yellow"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/buttonLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        <ImageView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/img_library"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:src="@mipmap/library_wight"
            />

        <TextView
            android:id="@+id/txt__library"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/library"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:gravity="center"
            />

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bar_library"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/home_icons_yellow"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonLivestream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/img_livestream"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_20"
                android:src="@mipmap/live_stream_wight"
                />

            <TextView
                android:id="@+id/txt__livestream"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/live_stream"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bar_livestream"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/home_icons_yellow"/>
    </LinearLayout>

</LinearLayout>